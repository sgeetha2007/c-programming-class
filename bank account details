#include <stdio.h>
#include <string.h>

struct BankAccount {
    int accountNumber;
    char name[50];
    float balance;
};

int main() {
    int n, i;
    struct BankAccount accounts[50];

    printf("Enter number of bank accounts: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("\nEnter details for account %d:\n", i + 1);

        printf("Account Number: ");
        scanf("%d", &accounts[i].accountNumber);

        printf("Account Holder Name: ");
        scanf(" %[^\n]s", accounts[i].name);

        printf("Balance: ");
        scanf("%f", &accounts[i].balance);
    }

    printf("\n--- Bank Account Details ---\n");
    for(i = 0; i < n; i++) {
        printf("\nAccount %d:\n", i + 1);
        printf("Account Number: %d\n", accounts[i].accountNumber);
        printf("Account Holder: %s\n", accounts[i].name);
        printf("Balance: %.2f\n", accounts[i].balance);
    }

    float total = 0;
    for(i = 0; i < n; i++) {
        total += accounts[i].balance;
    }
    printf("\nTotal Balance in Bank = %.2f\n", total);

    return 0;
}
