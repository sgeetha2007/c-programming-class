#include <stdio.h>
#include <string.h>

int main() {
    int n, i, found = 0;
    char item[30], items[50][30];
    float price[50];

    printf("Enter number of items in shop: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("\nEnter item %d name: ", i + 1);
        scanf("%s", items[i]);

        printf("Enter price of %s: ", items[i]);
        scanf("%f", &price[i]);
    }

    printf("\nEnter item name to search: ");
    scanf("%s", item);

    for(i = 0; i < n; i++) {
        if(strcmp(item, items[i]) == 0) {
            printf("\nItem Found!");
            printf("\nItem Name : %s", items[i]);
            printf("\nItem Price: %.2f", price[i]);
            found = 1;
            break;
        }
    }

    if(!found) {
        printf("\nItem not found in the shop");
    }

    return 0;
}
