#include <stdio.h>

void displayMenu() {
    printf("\n--- Menu ---\n");
    printf("1. Briyani\n");
    printf("2. Fried rice\n");
    printf("3. Curd rice\n");
    printf("4. Exit\n");
}

int main() {
    int choice;

    displayMenu();  

    printf("\nEnter your choice: ");
    scanf("%d", &choice);

    switch(choice) {
        case 1:
            printf("You selected Briyani");
            break;
        case 2:
            printf("You selected Fried rice");
            break;
        case 3:
            printf("You selected  Curd rice");
            break;
        case 4:
            printf("Exit");
            break;
        default:
            printf("Invalid choice");
    }

    return 0;
}
