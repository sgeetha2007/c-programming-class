#include <stdio.h>

int main() {
    float basicSalary, bonus, totalSalary;

    printf("Enter basic salary: ");
    scanf("%f", &basicSalary);

    printf("Enter bonus amount: ");
    scanf("%f", &bonus);

    totalSalary = basicSalary + bonus;

    printf("Total salary after adding bonus = %.2f\n", totalSalary);

    return 0;
}
