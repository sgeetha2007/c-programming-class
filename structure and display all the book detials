#include <stdio.h>

struct Book {
    int id;
    char title[30];
    float price;
};

int main() {
    int n, i;
    struct Book b[50];

    printf("Enter number of books: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("\nEnter details of book %d\n", i + 1);

        printf("Book ID: ");
        scanf("%d", &b[i].id);

        printf("Title: ");
        scanf("%s", b[i].title);

        printf("Price: ");
        scanf("%f", &b[i].price);
    }

    printf("\n--- Book Details ---\n");
    for(i = 0; i < n; i++) {
        printf("\nBook %d\n", i + 1);
        printf("ID: %d\nTitle: %s\nPrice: %.2f\n",
               b[i].id, b[i].title, b[i].price);
    }

    return 0;
}
