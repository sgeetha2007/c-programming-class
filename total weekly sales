#include <stdio.h>

int main() {
    float sales[7];
    float total = 0;
    int i;

    printf("Enter sales for 7 days:\n");

    for(i = 0; i < 7; i++) {
        printf("Day %d sales: ", i + 1);
        scanf("%f", &sales[i]);
        total += sales[i];
    }

    printf("\nTotal Weekly Sales = %.2f", total);

    return 0;
}
