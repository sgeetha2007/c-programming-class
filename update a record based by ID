#include <stdio.h>

struct Student {
    int id;
    char name[20];
};

int main() {
    int n, i, searchId, found = 0;
    struct Student s[50];

    printf("Enter number of records: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("\nEnter details of student %d\n", i + 1);
        printf("ID: ");
        scanf("%d", &s[i].id);
        printf("Name: ");
        scanf("%s", s[i].name);
    }

    printf("\nEnter ID to update: ");
    scanf("%d", &searchId);

    for(i = 0; i < n; i++) {
        if(s[i].id == searchId) {
            printf("Enter new name: ");
            scanf("%s", s[i].name);
            found = 1;

            printf("\nUpdated Record\n");
            printf("ID: %d\nName: %s", s[i].id, s[i].name);
            break;
        }
    }

    if(found == 0) {
        printf("\nRecord not found");
    }

    return 0;
}
