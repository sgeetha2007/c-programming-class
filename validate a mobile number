#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char mobile[20];
    int i, valid = 1;

    printf("Enter mobile number: ");
    scanf("%s", mobile);

    if(strlen(mobile) != 10) {
        valid = 0;
    }

    for(i = 0; mobile[i] != '\0'; i++) {
        if(!isdigit(mobile[i])) {
            valid = 0;
            break;
        }
    }

    if(valid)
        printf("Mobile number is Valid");
    else
        printf("Mobile number is Invalid");

    return 0;
}
